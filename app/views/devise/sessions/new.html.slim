.container.py-3
  .row.text-center
    .col-12 
      .box_menus__logo.mt-5.mb-5
            p 🔥
            p 🍔
            p 🍺
            p 🍖
            p 🛒
            p 💳
    .col-12
      main.form-signin
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'theme-card') do |f|
          h1.h3.mb-5.fw-normal = t('page_user.title_page_sign_in')
          .form-floating
            = f.input_field :email, class: 'form-control', required: true, label: t('page_user.form.email')
            label for="floatingInput" = t('page_user.form.email')
          .form-floating
            = f.input_field :password, class: 'form-control', required: true, label: t('page_user.form.password')
            label for="floatingInput" = t('page_user.form.password')
            
          small.box_users__recovery
            = render "devise/shared/links"
            br  
          .checkbox.mb-3
            label
              = f.input :remember_me, as: :boolean, label: t('page_user.form.remember_me') if devise_mapping.rememberable?
          = f.submit t('page_user.form.button_login'), id: "signIn", class: "w-100 btn btn-lg btn-dark"
          small.box_users__new
            span = t('page_user.form.not_account')
            = link_to new_user_registration_path do
              i.fa.fa-plus-square style="margin-left: .3rem; color:black;" aria-hidden="true" 
            

              