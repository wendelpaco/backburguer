.container.py-3
  .row.text-center
    .col-12 
      .menu_logo__login.mt-5.mb-5
            p 🔥
            p 🍔
            p 🍺
            p 🍖
            p 🛒
            p 💳
    .col-12
      main.form-signin
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'theme-card') do |f|
          h1.h3.mb-5.fw-normal Faça seu Login
          .form-floating
            = f.input_field :email, class: 'form-control', required: true, label: 'Endereço de E-email'
            label for="floatingInput"  Endereço de E-email
          .form-floating
            = f.input_field :password, class: 'form-control', required: true, label: 'Endereço de E-email'
            br
            label for="floatingInput"  Senha
          .checkbox.mb-3
            label
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          = f.submit "Entrar", id: "signIn", class: "w-100 btn btn-lg btn-dark"
          small 
            span Não tem uma conta ainda?
            = link_to new_user_registration_path do
              i.fa.fa-plus-square style="margin-left: .3rem; color:black;" aria-hidden="true" 

              
  / = render "devise/shared/links"